{
  "name": "@repo/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build --turbopack && opennextjs-cloudflare build --skipNextBuild",
    "check": "pnpm run check-format && pnpm run check-types && pnpm run lint",
    "check-format": "prettier --check --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "check-types": "next typegen && tsc",
    "dev": "next dev --turbopack --port 3000",
    "fix-lint": "eslint --fix .",
    "format": "prettier --write --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "generate-cf-types": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "lint": "next typegen && eslint --max-warnings 0 .",
    "lint-staged": "lint-staged",
    "start": "opennextjs-cloudflare preview --port 3000",
    "storybook": "storybook dev -p 6007 --no-open",
    "test": "pnpm run test:unit && pnpm run test:storybook && pnpm run test:e2e",
    "test:e2e": "PORT=3000 playwright test",
    "test:storybook": "vitest run --project storybook --coverage.enabled --coverage.reportsDirectory test-artifacts/storybook/coverage",
    "test:unit": "vitest run --project unit --coverage.enabled --coverage.reportsDirectory test-artifacts/unit/coverage"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "next": "^15.5.9",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@opennextjs/cloudflare": "^1.14.7",
    "@playwright/test": "^1.57.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/nextjs-vite": "^10.1.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16",
    "wrangler": "^4.56.0"
  }
}

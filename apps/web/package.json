{
  "name": "@repo/web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build && opennextjs-cloudflare build --skipNextBuild",
    "check-types": "tsc",
    "dev": "next dev --turbopack",
    "format": "prettier --write . --ignore-path .gitignore --ignore-path ../../.gitignore",
    "generate-cf-types": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts",
    "lint": "eslint --max-warnings 0 .",
    "lint-staged": "lint-staged",
    "start": "opennextjs-cloudflare preview",
    "storybook": "storybook dev -p 6007 --no-open",
    "test": "vitest run"
  },
  "dependencies": {
    "@repo/ui": "workspace:*",
    "next": "^15.5.9",
    "next-themes": "^0.4.6",
    "react": "^19.1.4",
    "react-dom": "^19.1.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@opennextjs/cloudflare": "^1.14.7",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-a11y": "^10.1.10",
    "@storybook/addon-docs": "^10.1.10",
    "@storybook/addon-themes": "^10.1.10",
    "@storybook/addon-vitest": "^10.1.10",
    "@storybook/nextjs-vite": "^10.1.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.4",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.24.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.0",
    "playwright": "^1.57.0",
    "prettier": "^3.5.3",
    "storybook": "^10.1.10",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.3",
    "vite": "^7.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.16",
    "wrangler": "^4.53.0"
  }
}

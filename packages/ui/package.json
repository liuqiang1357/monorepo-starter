{
  "name": "@repo/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./components/*": "./src/components/*.tsx",
    "./hooks/*": "./src/hooks/*.ts",
    "./styles/*": "./src/styles/*",
    "./utils/*": "./src/utils/*.ts",
    "./postcss.config": "./postcss.config.js"
  },
  "scripts": {
    "add-ui": "pnpm dlx shadcn@latest add",
    "postadd-ui": "pnpm run format",
    "check": "pnpm run check-format && pnpm run check-types && pnpm run lint",
    "check-format": "prettier --check --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "check-types": "tsc",
    "fix-lint": "eslint --fix .",
    "format": "prettier --write --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "lint": "eslint --max-warnings 0 .",
    "lint-staged": "lint-staged",
    "storybook": "storybook dev -p 6006 --no-open",
    "test": "pnpm run test:unit && pnpm run test:storybook",
    "test:storybook": "vitest run --project storybook --coverage.enabled --coverage.reportsDirectory test-artifacts/storybook/coverage",
    "test:unit": "vitest run --project unit --coverage.enabled --coverage.reportsDirectory test-artifacts/unit/coverage"
  },
  "dependencies": {
    "@fontsource-variable/manrope": "^5.2.8",
    "@fontsource-variable/roboto-mono": "^5.2.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.562.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": "^19.1.4",
    "react-dom": "^19.1.4"
  }
}

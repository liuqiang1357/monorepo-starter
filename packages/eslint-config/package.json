{
  "name": "@repo/eslint-config",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./base": "./src/base.js",
    "./react": "./src/react.js",
    "./next": "./src/next.js"
  },
  "scripts": {
    "check": "pnpm run check-format && pnpm run check-types && pnpm run lint",
    "check-format": "prettier --check --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "check-types": "tsc",
    "fix-lint": "eslint --fix .",
    "format": "prettier --write --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "lint": "eslint --max-warnings 0 .",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@eslint/js": "^9.39.2",
    "@next/eslint-plugin-next": "^15.5.9",
    "@tanstack/eslint-plugin-query": "^5.91.2",
    "@typescript-eslint/utils": "^8.50.1",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-check-file": "^3.3.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^10.1.10",
    "eslint-plugin-turbo": "^2.7.2",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.50.1"
  },
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": "^9.24.0"
  }
}

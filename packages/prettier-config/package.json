{
  "name": "@repo/prettier-config",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./base": {
      "types": "./types/base.d.ts",
      "default": "./src/base.js"
    },
    "./react": {
      "types": "./types/react.d.ts",
      "default": "./src/react.js"
    }
  },
  "scripts": {
    "check-types": "tsc",
    "format": "prettier --write . --ignore-path .gitignore --ignore-path ../../.gitignore"
  },
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-tailwindcss": "^0.6.11"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.14.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}

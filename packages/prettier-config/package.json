{
  "name": "@repo/prettier-config",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    "./base": "./src/base.js",
    "./react": "./src/react.js"
  },
  "scripts": {
    "check": "pnpm run check-format && pnpm run check-types",
    "check-format": "prettier --check --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "check-types": "tsc",
    "format": "prettier --write --ignore-path .gitignore --ignore-path ../../.gitignore .",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "prettier-plugin-packagejson": "^2.5.20",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^25.0.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3"
  }
}
